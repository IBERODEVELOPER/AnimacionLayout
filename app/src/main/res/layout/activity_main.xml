<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/layoutanimado"
        android:layout_width="match_parent"
        android:layout_height="1000px"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="150dp"
        android:background="@drawable/img"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tbnocultar"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints">

    </LinearLayout>

    <Button
        android:id="@+id/tbnocultar"
        android:layout_width="146dp"
        android:layout_height="57dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="46dp"
        android:background="#FB8C00"
        android:onClick="desaparecer"
        android:text="OCULTAR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnvisualizar"
        app:layout_constraintHorizontal_bias="0.024"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <Button
        android:id="@+id/btnvisualizar"
        android:layout_width="143dp"
        android:layout_height="59dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="10dp"
        android:background="#C0CA33"
        android:onClick="aparecer"
        android:text="aparecer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tbnocultar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="ANIMACION DE UN LAYOUT"
        android:textColor="#00ACC1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>